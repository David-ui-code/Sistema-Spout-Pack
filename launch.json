{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Arduino Debug",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "arm",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/arduino.cpp",
            "miDebuggerPath": "/arduino.cpp",
            "miDebuggerArgs": "--interpreter=mi2",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "PlatformIO: Upload"
        }
    ]
}